                alert("Registro Sincronizado!"); closeModal(); carregarDados(true);
            } catch(e) { alert("Erro de conex√£o."); }
            finally { btn.innerHTML = 'ATUALIZAR DADOS'; btn.disabled = false; }
        }
        
